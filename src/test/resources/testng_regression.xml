<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Shop Cart Test automtion regression suite"
	thread-count="3" parallel="tests" verbose="2">
	
	<listeners>
		<listener
			class-name="com.qa.opencart.testlisteners.ExtentReportListener" />
			<listener
			class-name="com.qa.opencart.testlisteners.TesultsListener" />
			<listener
			class-name="com.qa.opencart.testlisteners.TestAllureListener" />
		
	</listeners>
	

	<test name="Login page Test">
		<classes>
			<class name="com.qa.opencart.test.LoginpPageTest" />
		</classes>

	</test>

	<test name="Accounts page Test">
		<classes>
			<class name="com.qa.opencart.test.AccountPageTest" />
		</classes>

	</test>
	<test name="Register Page Test">
		<classes>
			<class name="com.qa.opencart.test.RegisterPageTest" />
		</classes>

	</test>
	<test name="Product Info Test">
		<classes>
			<class name="com.qa.opencart.test.ProductInfoTest" />
		</classes>

	</test>
	

</suite>







